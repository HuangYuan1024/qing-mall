<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huangyuan.goodsinfrastructure.persistence.mapper.CategoryMapper">

    <select id="existsById"
            resultType="boolean">
        SELECT COUNT(1)
        FROM category
        WHERE id = #{id}
    </select>

    <select id="selectByParentId"
            resultType="com.huangyuan.goodsinfrastructure.persistence.po.CategoryPo">
        SELECT *
        FROM category
        WHERE parent_id = #{parentId}
    </select>

</mapper>
